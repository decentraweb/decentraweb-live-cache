{
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "module": "CommonJS",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
